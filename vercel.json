{
  "builds": [
    { "src": "app/main.py", "use": "@python" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/app/main.py" }
  ],
  "env": {
    "UVICORN_PORT": "8080"
  },
  "build": {
    "env": {
      "PIP_TARGET": "/vercel/path0"
    },
    "command": "pip install -r requirements.txt && python app/main.py"
  }
}
